<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SPACE Conferencing</title>
    <link rel="stylesheet" href="style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" data-auto-a11y="true"></script>
    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>
</head>
<body>

    <div class="main">
        <div class="main__left">
            <div class="main__videos">
                <div id="video-grid">
    
                </div>
            </div>
            <div class="main__controls">
                <div class="main__controls__block">
                    <div class="main__controls__button main__hand_button" onclick="raiseLowerHand()">
                        <i class="far fa-hand-paper"></i>
                    </div>
                    <div class="main__controls__button main__video_button" onclick="playStop()">
                        <i class="fas fa-video"></i>
                        <!-- <span>Stop Video</span> -->
                    </div>
                    <div class="main__controls__button main__mute_button" onclick="muteUnmute()">
                        <i class="fas fa-microphone"></i>
                        <!-- <span>Mute</span> -->
                    </div>
                    <div class="main__controls__button" onclick="screenShare()">
                        <i class="fas fa-laptop"></i>
                        <!-- <span>Share Screen</span> -->
                    </div>
                    <div class="main__controls__button main__spatial_button">
                        <i class="fas fa-assistive-listening-systems"></i>
                        <span class="main__spatial_text">3D On</span>
                    </div>
                    <div class="main__controls__button">
                        <i class="fas fa-phone" style="color:red"></i>
                        <span class="leave_meeting"></span>
                    </div>
                </div>
            </div>
        </div>
        <!-- <div class="main__right">
            <div class="main__header">
                <h6>Chat</h6>
            </div>
        </div> -->
    </div>
    <script src="script.js"></script>
</body>
</html>